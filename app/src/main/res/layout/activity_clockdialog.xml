<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/clock_sleep_background">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="130dp"
        android:background="@drawable/clock_speech"/>

    <ImageView
        android:id="@+id/stop"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="110dp"
        android:background="@drawable/stop" />

    <ImageView
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="94dp"
        android:background="@drawable/p_pause"
        android:id="@+id/imageView" />

    <ImageView
        android:id="@+id/btn_continue"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/btn_home"
        android:layout_below="@+id/stop"
        android:background="@drawable/btn_continue" />

    <ImageView
        android:id="@+id/btn_home"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@+id/btn_continue"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp"
        android:background="@drawable/btn_home" />

</RelativeLayout>