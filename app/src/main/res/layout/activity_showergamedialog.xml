<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_1">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="130dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bathroom_2"/>

    <ImageView
        android:id="@+id/question"
        android:layout_width="wrap_content"
        android:layout_height="130dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="150dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/img_1"
                android:layout_width="50dp"
                android:layout_height="130dp"
                android:layout_marginRight="90dp"
                android:background="@drawable/conditioner" />

            <ImageView
                android:id="@+id/img_2"
                android:layout_width="50dp"
                android:layout_height="130dp"
                android:background="@drawable/shampoo" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:id="@+id/img_3"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:layout_marginRight="50dp"
                android:background="@drawable/soap" />

            <ImageView
                android:id="@+id/img_4"
                android:layout_width="70dp"
                android:layout_height="100dp"
                android:background="@drawable/toothbrush" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_show1"
            android:layout_width="0dp"
            android:layout_weight="25"
            android:layout_height="match_parent" />
        <ImageView
            android:id="@+id/img_show2"
            android:layout_width="0dp"
            android:layout_weight="25"
            android:layout_height="match_parent" />
        <ImageView
            android:id="@+id/img_show3"
            android:layout_width="0dp"
            android:layout_weight="25"
            android:layout_height="match_parent" />
        <ImageView
            android:id="@+id/img_show4"
            android:layout_width="0dp"
            android:layout_weight="25"
            android:layout_height="match_parent" />
    </LinearLayout>

    <TextView
        android:id="@+id/time"
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:textSize="40dp"/>

    <ImageView
        android:id="@+id/stop"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="90dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/stop" />

    <ImageView
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="94dp"
        android:background="@drawable/p_pause"
        android:id="@+id/imageView" />

    <ImageView
        android:id="@+id/btn_continue"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/btn_home"
        android:layout_below="@+id/stop"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_continue" />

    <ImageView
        android:id="@+id/btn_home"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@+id/btn_continue"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp"
        android:background="@drawable/btn_home" />

</RelativeLayout>
